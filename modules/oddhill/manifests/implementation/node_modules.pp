class oddhill::implementation::node_modules {
  $node_version = '4.3.0'

  npm_module { "grunt-cli for ${node_version}":
    module       => 'grunt-cli',
    node_version => $node_version
  }

  npm_module { "gulp for ${node_version}":
    module       => 'gulp',
    node_version => $node_version
  }

  npm_module { "bower for ${node_version}":
    module       => 'bower',
    version      => '~> 1.6.2',
    node_version => $node_version
  }

  npm_module { "yo for ${node_version}":
    module       => 'yo',
    node_version => $node_version
  }

  npm_module { "jshint for ${node_version}":
    module       => 'jshint',
    node_version => $node_version
  }

  npm_module { "generator-odd for ${node_version}":
    module       => 'generator-odd',
    node_version => $node_version,
    version      => '~> 1.0.1'
  }
}
